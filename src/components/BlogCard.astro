---
import BloggPostinfoBar from "./BloggPostinfoBar.astro";
const { article } = Astro.props;

const slug = article.file ? article.file.replace(/^.*[\\\/]/, "").replace(".md", "") : null;

const date = article.frontmatter.dateModified
  ? article.frontmatter.modifiedAt
  : article.frontmatter.publishedAt;
---

<div class="flex justify-center">
  <div class="max-w-sm bg-white border-2 border-black rounded-xl shadow-lg">
    <a href={`/blog/${slug}`}>
      <img class="rounded-t-xl" src={article.frontmatter.image} alt={article.frontmatter.altText} />
      <div class="p-5 text-left">
        <BloggPostinfoBar author={article.frontmatter.author} date={date} />
        <h5 class="mb-2 text-2xl font-interBold text-left">{article.frontmatter.title}</h5>

        <p class="mb-3 text-dark-gray text-left">
          {
            article.frontmatter.ingress.length > 150
              ? article.frontmatter.ingress.substring(0, 150) + "..."
              : article.frontmatter.ingress
          }
        </p>
        <div
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-black rounded-lg"
        >
          Read more
          <svg
            aria-hidden="true"
            class="w-4 h-4 ml-2 -mr-1"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path></svg
          >
        </div>
      </div>
    </a>
  </div>
</div>
