---
import SignUpForm from "./SignUpForm.astro";
---

<div id="signup-overlay">
	<div class="signup-form-holder">
		<SignUpForm />
	</div>
</div>

<style lang="less">
	#signup-overlay {
		position: fixed;
		display: none;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 10;
		cursor: pointer;
		.signup-form-holder {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			-ms-transform: translate(-50%, -50%);
			width: 100%;
			max-width: 550px;
			height: 100%;
			max-height: 845px;
		}
	}
</style>
