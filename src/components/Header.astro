---
import LoginButton from "./LoginButton.astro";
import SignUpButton from "./SignUpButton.astro";
import Logo from "../assets/svg/tagglo-logo.svg";

const { pageContent } = Astro.props;
---

<div class="top-menu-holder text-sm w-full z-10 bg-desert border-gray-200 border-b">
  <div class="content-wrapper">
    <div class="content">
      <div class="flex justify-between items-center">
        <div class="flex flex-grow items-center">
          <a href="/"><img src={Logo.src} alt="Tagglo logo" /></a>
          <div class="nav-links pl-3">
            <a href="#features">Feature</a>
            <a href="#benefits">Benefits</a>
            <a href="#pricing">Pricing</a>
            <a href="#demo">Request demo</a>
            <a href="#faq">FAQ</a>
            <a href="/blog">Blog</a>
          </div>
        </div>

        <LoginButton buttonText={pageContent.frontmatter.loginButtonText} />
        <SignUpButton buttonText={pageContent.frontmatter.signUpButton} />
      </div>
    </div>
  </div>
</div>

<script is:inline>
window.addEventListener("scroll", () => {
  const header = document.querySelector(".top-menu-holder");
  if (header) {
    if (window.scrollY >= 450) {
      header.classList.add("fixed", "animate__animated", "animate__slideInDown");
    }
    if (window.scrollY == 0) {
      //header.classList.remove('animate__slideInDown');
      header.classList.remove("fixed", "animate__animated", "animate__slideInDown");
      //header.classList.add('animate__slideInUp');
    }
  }
});
</script>

<style lang="less">
  .nav-links {
    @media screen and (max-width: 1024px) {
      display: none;
    }
    a {
      padding-left: 2rem;
    }
  }
</style>
