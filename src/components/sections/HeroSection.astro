---
import RequestDemoForm from "../RequestDemoForm.astro";
import ChevronDown from "../../assets/svg/chevron-down.svg";

import * as content from "../../content/sections/Hero.md";
const data = content.frontmatter;
---

<div class="pt-12 pb-24 md:pt-48 md:pb-56 dunes-right">
  <div class="content-wrapper">
    <div class="content-hero">
      <div class="font-interMedium text-black text-center text-4xl md:text-6xl">
        {data.heading}
      </div>
      <h2
        class="font-interBold text-black text-4xl md:text-6xl text-center pb-6"
        set:html={data.title}
      />
      <p class="text-center text-black text-base md:text-2xl" set:html={data.subtitle} />
      <div class="reguest-demo-header max-w-2xl mx-auto pt-12">
        <RequestDemoForm formId="requestone" buttonText={data.buttonText} />
        <div class="pt-12 flex justify-center">
          <a href="#howitworks">
            How it works<br />
            <img class="mx-auto" src={ChevronDown.src} alt="Down arrow" />
          </a>
        </div>
      </div>
    </div>
  </div>

  <style lang="less">
    .content-hero {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      height: 100%;
      .reguest-demo-header {
        input,
        button {
          width: 100%;
          max-width: 320px;
          height: 56px;
        }
      }
    }
  </style>
</div>
