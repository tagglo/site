---
import PricingCard from "../PricingCard.astro";
const { data } = Astro.props;
---

<div id="pricing" class="py-12 md:py-24">
  <div class="content-wrapper">
    <div class="content">
      <div class="py-8 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="section-heading">{data.heading}</div>
        <h2 class="section-title">
          {data.title}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-0">
          <!-- Pricing Card -->
          <div
            class="price-card side border md:border-0 md:border-t-2 md:border-b-2 md:border-l-2 rounded-xl md:rounded-none md:rounded-tl-xl md:rounded-bl-xl"
          >
            <PricingCard planType="free" plans={data.plans} />
          </div>
          <div style="height:750px" class="price-card border-2 rounded-xl">
            <PricingCard planType="professional" plans={data.plans} />
          </div>
          <div
            class="price-card side border md:border-0 md:border-t-2 md:border-b-2 md:border-r-2 rounded-xl md:rounded-none md:rounded-tr-xl md:rounded-br-xl"
          >
            <PricingCard planType="enterprise" plans={data.plans} />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style lang="less">
  .price-card {
    @apply flex w-full flex-col p-6 mx-auto max-w-lg  text-center text-gray-900 bg-desert-medium border-dark-gray shadow-lg mb-6 md:mb-0;
    &.side {
      height: 650px;
      margin-top: 50px;
      @media screen and (max-width: 500px) {
        height: 550px;
        margin-top: 0;
      }
    }
  }
</style>
