---
import RequestDemoForm from "../RequestDemoForm.astro";
import * as content from "../../content/sections/RequestDemo.md";
const data = content.frontmatter;
---

<div id="demo" class="pt-12 pb-24 md:pt-24 pb-48 dunes-right">
  <div class="content-wrapper">
    <div class="content">
      <div class="section-heading">{data.heading}</div>
      <h2 class="section-title">
        {data.title}
      </h2>

      <div class="max-w-3xl mx-auto border-2 border-black p-6 md:p-12 rounded-lg mg-12 md:mb-24">
        <RequestDemoForm formId="request-meeting" buttonText={data.buttonText} type="meeting" />
      </div>
    </div>
  </div>
</div>

<style lang="less"></style>
